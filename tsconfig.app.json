{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "preserveSymlinks": false,    
    "jsxImportSource": "vue",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "paths": {
      "@/*": [ "./app/*" ],
    },
    "resolveJsonModule": true,
    "rootDir": "./",
    "skipLibCheck": false,
    "strict": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "verbatimModuleSyntax": true
  },
  "exclude": [
    "node_modules",
    "./dist",
    "./e2e",
    "app/main/dev-dist"
  ],
  "include": [
    "./app/**/*",
    "./declarations/*"
  ]
}